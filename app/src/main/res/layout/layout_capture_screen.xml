<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:background="@color/adjusted_aa">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/view_drag_handle"
                android:background="@drawable/ic_drag_handle"
                android:focusable="true"
                android:clickable="true"/>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/button_close"
                android:background="@drawable/ic_close"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:layout_alignRight="@+id/imageView"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_below="@+id/view_drag_handle"/>
        </RelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_marginLeftPercent="40%"
                android:id="@+id/button_cap"
                android:background="@drawable/ic_camera"
                android:minHeight="28dp"
                android:minWidth="28dp"
                android:maxWidth="30dp"
                android:maxHeight="30dp"/>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_marginLeftPercent="8%"
                android:id="@+id/button_save"
                android:background="@drawable/ic_save"
                android:minHeight="25dp"
                android:minWidth="25dp"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_marginLeftPercent="70%"
                android:id="@+id/button_next"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:background="@drawable/ic_add"/>
        </android.support.percent.PercentRelativeLayout>

    </LinearLayout>

</LinearLayout>