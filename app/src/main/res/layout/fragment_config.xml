<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ポート番号"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/portEdit"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:ems="10"
                    android:inputType="text" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/showsViewCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:checked="false"
                android:text="タッチ検出領域を可視化"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="x座標"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/viewXEdit"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberSigned" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="y座標"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/viewYEdit"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberSigned" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="幅"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/viewWidthEdit"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="高さ"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/viewHeightEdit"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="40dp"
                    android:text="色"
                    android:textSize="15dp" />

                <View
                    android:id="@+id/launcherColorView"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@color/slant_launcher_default" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/vibratesWhenViewTouchedCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:checked="false"
                android:text="タッチ時に振動させる"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/usesProxyCheck"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:checked="false"
                android:text="プロキシを使用する"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="(よくわからないならチェックしない方が良いです)" />

            <LinearLayout
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="    ホスト"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/proxyHostEdit"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ポート番号"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/proxyPortEdit"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.21"
                    android:ems="10"
                    android:inputType="text" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/savesJsonCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:checked="false"
                android:text="JSONを保存する"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/savesRequestCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:checked="false"
                android:text="リクエストを保存する"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/usesMissionNotificationCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:text="遠征完了時に通知する"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/usesDockNotificationCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="入渠完了時に通知する"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/makesSoundWhenNotifyCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:text="通知時に音で知らせる"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/vibratesWhenNotifyCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="通知時に端末を振動させる"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/forcesLandscapeCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="横画面固定"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/showsWinRankOverlayCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="戦況オーバーレイを表示する"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/showsHeavilyDamagedOverlayCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="大破警告オーバーレイを表示する"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/showsHeavilyDamagedWarningWindowCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="大破警告画面を表示する"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/sendsJsonCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Jsonを送信(デバッグ用)"
                android:textSize="15dp" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="設定を保存"
                android:textSize="18dp" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>


