<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radio_this_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="今月" />

            <RadioButton
                android:id="@+id/radio_last_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="先月" />

            <RadioButton
                android:id="@+id/radio_all_span"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="全期間" />

            <RadioButton
                android:id="@+id/radio_select_span"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="期間を指定" />
        </RadioGroup>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_select_from_to_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/radio_group">

            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_select_from_date"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:text="日付"
                app:layout_constraintLeft_toRightOf="@id/textView63"
                app:layout_constraintTop_toTopOf="@id/textView63" />

            <TextView
                android:id="@+id/text_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2017-11-11"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintBaseline_toBaselineOf="@id/btn_select_from_date"
                app:layout_constraintLeft_toRightOf="@id/btn_select_from_date" />

            <Button
                android:id="@+id/btn_select_from_time"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:text="時間"
                app:layout_constraintLeft_toLeftOf="@id/btn_select_from_date"
                app:layout_constraintTop_toBottomOf="@id/btn_select_from_date" />

            <TextView
                android:id="@+id/text_from_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="00:00"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintBaseline_toBaselineOf="@id/btn_select_from_time"
                app:layout_constraintLeft_toRightOf="@id/btn_select_from_time" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="to"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintLeft_toLeftOf="@id/textView63"
                app:layout_constraintTop_toBottomOf="@id/btn_select_from_time" />

            <Button
                android:id="@+id/btn_select_to_date"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:text="日付"
                app:layout_constraintLeft_toLeftOf="@id/btn_select_from_date"
                app:layout_constraintTop_toTopOf="@id/textView64" />

            <TextView
                android:id="@+id/text_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2017-12-12"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintBaseline_toBaselineOf="@id/btn_select_to_date"
                app:layout_constraintLeft_toRightOf="@id/btn_select_to_date" />

            <Button
                android:id="@+id/btn_select_to_time"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:text="時間"
                app:layout_constraintLeft_toLeftOf="@id/btn_select_to_date"
                app:layout_constraintTop_toBottomOf="@id/btn_select_to_date" />

            <TextView
                android:id="@+id/text_to_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="23:59"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintBaseline_toBaselineOf="@id/btn_select_to_time"
                app:layout_constraintLeft_toRightOf="@id/btn_select_to_time" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>