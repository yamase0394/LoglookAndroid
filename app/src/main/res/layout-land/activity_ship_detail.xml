<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:mstId="@+mstId/activity_ship_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.gr.java_conf.snake0394.loglook_android.view.activity.ShipDetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:mstId="@+mstId/toolbar2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:mstId="@+mstId/shipName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="30sp"/>

                        <TextView
                            android:mstId="@+mstId/lv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="TextView"
                            android:textSize="20sp"
                            android:layout_weight="1"/>

                        <TextView
                            android:mstId="@+mstId/state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="TextView"
                            android:textSize="22sp"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@android:color/background_light"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:mstId="@+mstId/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:minHeight="10dp"
                            android:minWidth="50dp"
                            android:progressDrawable="@drawable/progressbar"
                            android:layout_marginLeft="5dp"
                            android:layout_width="120dp"/>

                        <TextView
                            android:mstId="@+mstId/hp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="TextView"
                            android:textSize="20sp"
                            />

                        <TextView
                            android:mstId="@+mstId/cond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:mstId="@+mstId/textView53"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="燃料:"
                            android:textSize="20sp"/>

                        <TextView
                            android:mstId="@+mstId/fuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textSize="20sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:mstId="@+mstId/textView54"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="弾薬:"
                            android:textSize="20sp"/>

                        <TextView
                            android:mstId="@+mstId/bull"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textSize="20sp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:mstId="@+mstId/space1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="17sp"
                                android:layout_marginRight="5dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:mstId="@+mstId/equipIcon1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/not_available"
                                    />

                                <TextView
                                    android:mstId="@+mstId/equipment1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TextView"
                                    android:textSize="19sp"
                                    android:layout_marginLeft="5dp"/>
                            </LinearLayout>

                            <TextView
                                android:mstId="@+mstId/alv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="|"
                                android:textSize="20sp"/>

                            <TextView
                                android:mstId="@+mstId/improvement1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="★"
                                android:textSize="17sp"
                                />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:mstId="@+mstId/space2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="17sp"
                                android:layout_marginRight="5dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:mstId="@+mstId/equipIcon2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/not_available"
                                    />

                                <TextView
                                    android:mstId="@+mstId/equipment2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TextView"
                                    android:textSize="19sp"
                                    android:layout_marginLeft="5dp"/>
                            </LinearLayout>

                            <TextView
                                android:mstId="@+mstId/alv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="|"
                                android:textSize="20sp"/>

                            <TextView
                                android:mstId="@+mstId/improvement2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="★"
                                android:textSize="17sp"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:mstId="@+mstId/space3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="17sp"
                                android:layout_marginRight="5dp"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:mstId="@+mstId/equipIcon3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/not_available"
                                    />

                                <TextView
                                    android:mstId="@+mstId/equipment3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TextView"
                                    android:textSize="19sp"
                                    android:layout_marginLeft="5dp"/>
                            </LinearLayout>

                            <TextView
                                android:mstId="@+mstId/alv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="|"
                                android:textSize="20sp"/>

                            <TextView
                                android:mstId="@+mstId/improvement3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="★"
                                android:textSize="17sp"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:mstId="@+mstId/space4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="17sp"
                                android:layout_marginRight="5dp"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:mstId="@+mstId/equipIcon4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/not_available"
                                    />

                                <TextView
                                    android:mstId="@+mstId/equipment4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TextView"
                                    android:textSize="19sp"
                                    android:layout_marginLeft="5dp"/>
                            </LinearLayout>

                            <TextView
                                android:mstId="@+mstId/alv4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="|"
                                android:textSize="20sp"/>

                            <TextView
                                android:mstId="@+mstId/improvement4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="★"
                                android:textSize="17sp"/>
                        </TableRow>


                    </TableLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:mstId="@+mstId/textView76"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="補強増設:"
                            android:textSize="19sp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/not_available"
                                android:mstId="@+mstId/extraSlotIcon"
                                />

                            <TextView
                                android:mstId="@+mstId/extraSlot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TextView"
                                android:textSize="19sp"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="right">

                        <TextView
                            android:text="砲撃戦火力:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:mstId="@+mstId/textView51"
                            android:textSize="19sp"
                            android:layout_marginLeft="60dp"
                            android:layout_weight="1"
                            android:gravity="right"/>

                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:mstId="@+mstId/shellingBasicAttackPower"
                            android:layout_marginLeft="5dp"
                            android:textSize="19sp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="right">

                        <TextView
                            android:text="夜戦火力:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:mstId="@+mstId/textView52"
                            android:textSize="19sp"
                            android:layout_marginLeft="60dp"
                            android:layout_weight="1"
                            android:gravity="right"/>

                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:mstId="@+mstId/nightBattleBasicAttackPower"
                            android:layout_marginLeft="5dp"
                            android:textSize="19sp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
